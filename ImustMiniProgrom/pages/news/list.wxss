/* pages/news/list.wxss */
.contain {
  display: flex;
  width: 100%;
  padding-top: 36px;
  flex-direction: column;
}

.news {
  margin-top: 0rpx;
  width: 100%;
}

.footer_loading_more {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 14px;
  text-align: center;
}

#newsNavBar{
  display: flex;
  height: 36px;
  width: 100%;
  border-bottom: 1px solid #e5e5e5;
  justify-content: center;
  position: fixed;
  background-color: #fff;
  top: 0;
}

#newsNavBarSearch{
  padding-left: 4px;
}

.newsNavBarButton{
  display: inline-block;
  font-size: 0;
  padding: 6px 8px;
  background-color: transparent;
  border: none;
  margin-top: 2px;
}

.newsNavBarButton image{
  width: 20px;
  height: 20px;
}

.newsNavBarButton::after{
  border: none;
}

#newsNavBarChannel{
  flex: 1;
  padding: 0 8px;
  overflow: hidden;
}

#newsNavBarChannelList{
  height: 36px;
  line-height: 36px;
  white-space: nowrap;
  font-size: 0;
}

.newsNavBarChannelListItem{
  display: inline-block;
  height: 36px;
  line-height: 36px;
  margin-right: 16px;
  font-size: 14px;
  color: #666;
}

.newsNavBarChannelListItem.active{
  color: #1E96FF;
  position: relative;
  font-weight: bold;
}

.newsNavBarChannelListItem.active::after{
  content: ' ';
  display: inline-block;
  width: 18px;
  height: 3px;
  background-color: #1E96FF;
  position: absolute;
  bottom: 2px;
  left: 50%;
  margin-left: -9px;
}

#newsNavBarOthers{
  padding-right: 4px;
}

#newsNavBarCustomizeChannel{
  margin-right: 6px;
}

.news_meta{
  display: flex;
  font-size: 12px;
  color: #999;
  align-content: justify;
  margin-top: 8px;
}

.news_type{
  flex: 1;
}

.news_date{
  flex: 2;
  text-align: right;
}

.news_title{
  font-weight: bold;
  font-size: 16px;
  color: #333;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
}

.news_info{
  flex: 1;
}

.news_item{
  margin: 0 16px;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
  display: flex;
}

.news_thumb{
  width: 82px;
  height: 62px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 3px;
}

.news_thumb image{
  width: 82px;
  height: 62px;
}

.news_item.big{
  display: block;
}

.news_item.big .news_thumb{
  width: 100%;
  margin-right: 0;
  margin-bottom: 8px;
  height: 153px;
}

.big .news_thumb image{
  width: 100%;
  height: 100%;
}
