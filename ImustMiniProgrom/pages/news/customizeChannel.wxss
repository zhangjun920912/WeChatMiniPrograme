/* pages/news/customizeChannel.wxss */

.channel_block{
  padding: 16px;
}

.channel_title{
  color: #333;
  font-size: 18px;
  font-weight: bold;
}

.channel_list{
  margin: 0 -5px;
  display: flex;
  flex-wrap: wrap;
}

.channel_item{
  display: inline-block;
  height: 36px;
  line-height: 36px;
  width: 23%;
  font-size: 14px;
  color: #333;
  background-color: #fff;
  border-radius: 30px;
  border: 1px solid #bbb;
  margin: 8px 1%;
  overflow: hidden;
}

.channel_item::after{
  border: none;
}

#channel_more .channel_item, .edit .channel_item{
  box-shadow: 0 3px 7px rgba(0, 0, 0, .06);
}

#channel_more .channel_item::before, .edit .channel_item::before{
  display: block;
  color: #999;
  width: 14px;
  height: 14px;
  position: absolute;
  top: 50%;
  left: 4px;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0 0;
  transform: translate(0, -50%);
}

#channel_more .channel_item::before{
  content: ' ';
  background-image: url(data:image/png;base64,);
}

.edit .channel_item::before{
  content: ' ';
  background-image: url(data:image/png;base64,);
}

.channel_title_row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 25px;
  line-height: 25px;
  margin-bottom: 10px;
}

.channel_title_desc{
  font-size: 12px;
  color: #999;
}

#channel_edit_btn{
 color: #1E96FF;
 font-size: 14px;
}

.btn_normal{
  background-color: #1E96FF;
  border: none;
  color: #fff;
  font-weight: bold;
  font-size: 18px;
  width: 90%;
  border-radius: 50px;
  height: 50px;
  line-height: 50px;
  box-shadow: 0 6px 10px rgba(30, 150, 255, .2);
  position: fixed;
  bottom: 50px;
  left: 50%;
  transform: translate(-50%, 0);
}

.btn_normal::after{
  border: none;
}